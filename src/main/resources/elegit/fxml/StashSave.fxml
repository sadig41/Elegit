<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>


    <AnchorPane fx:controller="elegit.controllers.StashSaveController"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="anchorRoot"
            prefWidth="350" nodeOrientation="RIGHT_TO_LEFT">
    <GridPane   AnchorPane.bottomAnchor="20"
                AnchorPane.topAnchor="5"
                AnchorPane.leftAnchor="5"
                AnchorPane.rightAnchor="5"
                hgap="10"
                vgap="10">

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <Label  GridPane.valignment="BOTTOM"
                text="رسالة"/>

        <TextField  GridPane.rowIndex="1"
                    GridPane.columnSpan="2"
                    GridPane.valignment="TOP"
                    prefHeight="30"
                    fx:id="stashMessage"
                    promptText="رسالة..."/>

        <CheckBox   GridPane.rowIndex="2"
                    GridPane.halignment="LEFT"
                    GridPane.valignment="TOP"
                    fx:id="includeUntracked"
                    text="تضمين ملفات غير متابعة"/>

        <Button fx:id="cancelButton"
                GridPane.rowIndex="3"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                text="الغاء"
                onAction="#closeWindow"/>

        <Button fx:id="stashButton"
                id="saveButton"
                GridPane.rowIndex="3"
                GridPane.columnIndex="1"
                GridPane.halignment="RIGHT"
                text="حفظ"
                onAction="#handleSave"/>
    </GridPane>

    <fx:include source="NotificationPane.fxml" fx:id="notificationPane"/>

    <stylesheets>
        <URL value="@../css/BaseStyle.css"/>
    </stylesheets>
</AnchorPane>

